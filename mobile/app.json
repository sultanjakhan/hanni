{
  "expo": {
    "name": "Hanni",
    "slug": "hanni",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#000000"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.hanni.app"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Hanni to access your microphone for voice input."
        }
      ]
    ]
  }
}
